public class Vertex {
	int value;
	boolean visited;
	Vertex next;
		
	public Vertex(int initialValue) {
		value = initialValue;
		visited = false;
		next = null;
	}
	
	public Vertex addVertex(Vertex destination) {
		
		Vertex currentVertex = this;
		Vertex nextVertex = currentVertex.next;
		
		if (nextVertex != null) {
			
			while (nextVertex != null) {
				
				if (currentVertex.value <= destination.value && destination.value <= nextVertex.value) {
					destination.next = nextVertex;
					currentVertex.next = destination;
				} 
				
				currentVertex = nextVertex;
				nextVertex = nextVertex.next;
			}
			
		} else {
			this.next = destination;
		}
		
		return this;
	}
}